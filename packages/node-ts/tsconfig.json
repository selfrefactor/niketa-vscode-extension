{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": "./",
    "incremental": true,                   
    "target": "ES2020",                          
    "module": "commonjs",                     
    "allowJs": true,                       
    "checkJs": true,                       
    "declaration": true,                   
    "outDir": "./dist",                        
    "rootDir": "",                       
    "strict": true,                           
    "noUnusedParameters": true,            
    "noFallthroughCasesInSwitch": true,    
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
